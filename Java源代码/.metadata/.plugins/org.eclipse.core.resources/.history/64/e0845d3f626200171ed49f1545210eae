		        	String temp_id = textField.getText();
		            int user_id = Integer.parseInt(temp_id);
		            Demo demo = new Demo();
		            try {
						demo.delete(user_id);
					} catch (ClassNotFoundException | SQLException e1) {
						// TODO 自动生成的 catch 块
						e1.printStackTrace();
					}
